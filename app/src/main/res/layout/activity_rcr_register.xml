<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tri_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center"
        android:orientation="vertical"
        android:background="@drawable/container"
        android:layout_marginHorizontal="20dp"
        tools:context=".RCRRegisterActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:text="RCR Registration"
            android:textSize="25sp" />

        <EditText
            android:id="@+id/rcr_reg_et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="20dp"
            android:hint="Center name" />

        <EditText
            android:id="@+id/rcr_reg_et_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginVertical="5dp"
            android:hint="Address" />

        <Spinner
            android:id="@+id/rcr_reg_et_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="City"
            android:layout_marginVertical="5dp"
            android:entries="@array/City">

        </Spinner>

        <!--   <EditText
               android:id="@+id/rcr_reg_et_city"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:hint="City" />

           <EditText
               android:id="@+id/rcr_reg_et_state"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_marginLeft="20dp"
               android:layout_marginRight="20dp"
               android:hint="State" />-->

        <EditText
            android:id="@+id/rcr_reg_et_pincode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Pincode"
            android:layout_marginVertical="5dp"
            android:inputType="number" />

        <Spinner
            android:id="@+id/rcr_reg_et_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:autofillHints="State"
            android:layout_marginVertical="5dp"
            android:entries="@array/States">

        </Spinner>

        <EditText
            android:id="@+id/rcr_reg_et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:hint="Phone"
            android:layout_marginVertical="5dp"
            android:inputType="number" />

        <EditText
            android:id="@+id/rcr_reg_et_reg_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginVertical="5dp"
            android:layout_marginRight="20dp"
            android:hint="Registeration Number"
            android:inputType="number" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginHorizontal="25dp">

            <TextView
                android:id="@+id/rcr_reg_doc_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:layout_marginVertical="5dp"
                android:text="Upload Registration Document" />

            <Button
                android:id="@+id/rcr_reg_doc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:gravity="center_vertical"
                android:text="Browse" />
        </RelativeLayout>

        <Button
            android:id="@+id/rcr_reg_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="30dp"
            android:gravity="center"
            android:background="@drawable/btn"
            android:text="Submit" />

    </LinearLayout>
</ScrollView>